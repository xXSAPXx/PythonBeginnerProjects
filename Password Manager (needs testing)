
MasterPassword=input("Welcome! Please enter the Master Password:")
if MasterPassword!=(123456):
    print("Wrong Password!")
    quit()

def see():
    with open('passwords.txt', 'r') as file:
        for Lines in file.readlines():
            Data=Lines
            User, Pass=Data.split(" | ")
            print("Username:",User "| Password:", Pass)

def new():
    Username=input("Please enter your new username: ")
    Password=input("Please enter the new password used for this username: ")
    with open('passwords.txt', 'a') as file:
        file.write(Username + " | " + Password + "\n")
        print("Your Username and Password have been saved!\n(SEE PASSWORDS.TXT FILE)")
        quit()
    
while True:
    user_input=input("Hello please select NEW for adding new username and password.\nOr SEE to see the already exsiting usernames and passwords.").lower()

    if user_input=="q":
        print("Thank you for using my password manager. Goodbye!")
        quit()
    elif user_input=="new":
        new()
    elif user_input=="see":
        see()
    else:
        print("Please enter a valid option")
        continue