while True:
    
    deposit=input("Please enter the amount you want to deposit!")
    try:
        deposit_int=int(deposit)
    except ValueError:
        print("Please enter a number!")
        continue
    
    if deposit_int <=0:
        print("Please enter an amount bigger than zero!")
        continue
    else:
        break
    
print("You succefully deposited " + str(deposit_int) +" dollars.")
new_balance=deposit_int

while True:
    user_bet=input("Please enter the amount you wish to bet.")
    try:
        user_bet_int=int(user_bet)
    except ValueError:
        print("Please enter a number!")
        continue

    if user_bet_int > deposit_int or user_bet_int > new_balance:
        print("Invalid balance!")
        continue
    else:
        print("You are now betting " + str(user_bet_int) + " dollars! Please wait...")
        time.sleep(2)
        computer_spin()





